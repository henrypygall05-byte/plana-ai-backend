# Plana.AI Configuration
# Copy this file to .env and fill in the values

# Application
DEBUG=false
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://plana:plana@localhost:5432/plana
DATABASE_POOL_SIZE=10

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./data/documents
# For S3:
# STORAGE_BACKEND=s3
# STORAGE_S3_BUCKET=plana-documents
# STORAGE_S3_REGION=eu-west-2
# STORAGE_S3_ACCESS_KEY=your-access-key
# STORAGE_S3_SECRET_KEY=your-secret-key

# Vector Store
VECTOR_BACKEND=chroma
VECTOR_CHROMA_PERSIST_PATH=./data/chroma
VECTOR_EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM Provider
LLM_PROVIDER=anthropic
LLM_ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_ANTHROPIC_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.3

# Alternative: OpenAI
# LLM_PROVIDER=openai
# LLM_OPENAI_API_KEY=your-openai-api-key
# LLM_OPENAI_MODEL=gpt-4-turbo-preview

# Council Portal Settings
COUNCIL_DEFAULT_COUNCIL=newcastle
COUNCIL_REQUEST_DELAY_SECONDS=1.0
COUNCIL_REQUEST_TIMEOUT_SECONDS=30
COUNCIL_MAX_RETRIES=3
